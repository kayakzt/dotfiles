snippet func "func () (){...}"
func ${1}(${2}) ${3:error}{
    ${4}
}
endsnippet

snippet struct "type struct..."
type ${1} struct {
	${0}
}
endsnippet

snippet iferr "if err != nil {...}"
if err != nil {
    ${1}
}
endsnippet

snippet ifok "if !ok {...}"
if !ok {
    ${1}
}
endsnippet

snippet forcstyle "C style for loop"
for i := 0; i < ${1}; i++ {
    ${2}
}
endsnippet

snippet switch "switch {case:... default:...}"
switch ${1:condition} {
case ${2}:${3}
default:${0}
}
endsnippet

snippet testFunc "function template for testing"
func Test${1}(t *testing.T) {
	${0}
}
endsnippet

snippet tableTest "templage block for table testing"
cases := []struct {
    in   ${1}
    want ${2}
}{
    ${3}
}
for _, c := range cases {
    got := ${4}
    if got != c.want {
        t.Errorf("func(%q) = %q, want %q", c.in, got, c.want)
    }
}
endsnippet

snippet testSub "function template for sub testing"
func Test${1}(t *testing.T) {
    t.Run("${2}", func(t *testing.T) {
		${0}
    })
}
endsnippet

snippet benchFunc "function template for benchmarking"
func Benchmark${1}(b *testing.B) {
	${0}
}
endsnippet

snippet benchSub "function template for sub benchmarking"
func Benchmark${1}(b *testing.B) {
    b.Run("${2}", func(b *testing.B) {
        b.ReportAllocs()
        b.ResetTimer()
        for i := 0; i < b.N; i++ {
            ${3:#:// do something...}
        }
        b.StopTimer()
    })
}
endsnippet

