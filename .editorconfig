# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{c,h,cpp,cc,hpp}]
indent_size = 2

[*.{html,css,js,vue}]
indent_size = 2

[*.lua]
indent_size = 2

[*.go]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
