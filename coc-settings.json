    "python.linting.pycodestyleEnabled": false,
    "python.linting.pydocstyleEnabled": false,
    "python.formatting.provider": "black",
    "go.checkForUpdates": "ask",
    "go.goplsOptions": {
        "completeUnimported": true
    },
    "markdownlint.config": { "line-length": false },
