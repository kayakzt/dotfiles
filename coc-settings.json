{
    "suggest.noselect": true,
    "coc.preferences.extensionUpdateCheck": "weekly",
    "coc.preferences.formatOnSave": true,
    "coc.preferences.formatOnSaveFiletypes": [
        "json",
        "jsonc",
        "html",
        "css",
        "sass",
        "scss",
        "javascript",
        "typescript",
        "vue",
        "rust",
        "python",
        "go,"
    ],
    "notification.border": false,
    "diagnostic.infoSign": ">",
    "diagnostic.hintSign": "?",
    "diagnostic.warningSign": "!",
    "diagnostic.errorSign": "â˜“",
    /* "diagnostic.signOffset": 500,         */
    /* "diagnostic.refreshAfterSave": false, */
    "diagnostic.refreshOnInsertMode": false,
    "diagnostic.enableHighlightLineNumber": true,
    "suggest.enableFloat": true,
    "suggest.labelMaxLength": 80,
    "snippets.ultisnips.directories": ["~/.config/dotfiles/snippets"],
    "snippets.ultisnips.enable": true,
    "list.insertMappings": {
        "<C-h>": "do:exit"
    },
    "list.normalMappings": {
        "q": "do:exit"
    },
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "objc", "objcpp"],
            "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/"],
            "initializationOptions": {
                "directory": "/tmp/ccls"
            }
        },
        "efm": {
            "command": "efm-langserver",
            "args": [],
            "filetypes": [
                "vim",
                "text",
                "markdown",
                "html",
                "asciidoc",
                "rst",
                "help",
                "review"
            ]
        },
